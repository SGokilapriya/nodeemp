extends ../layout

block content
    ul
        a(href='/employees/') Home |
        a(href='/employees/new') Add new employee
    h1.
        Employee id: #{blob._id}
    form(action='/employees/#{blob._id}/edit',method='post',name='updateblob',enctype='application/x-www-form-urlencoded')
        p Name:
            input#inputName(type='text', value='#{blob.name}', name='name')
        p Email:
            input#inputName(type='text', value='#{blob.email}', name='email')
        p Phone:
            input#inputName(type='text', value='#{blob.phone}', name='phone')
        p Department:
            input#inputName(type='text', value='#{blob.department}', name='department')
        p State:
            input#inputName(type='text', value='#{blob.state}', name='state')
        p City:
            input#inputName(type='text', value='#{blob.city}', name='city')
        p Zip:
            input#inputName(type='text', value='#{blob.zip}', name='zip')
        p DOB:
            input#inputName(type='text', value='#{blob.dob  }', name='dob')
        p
            input(type='hidden',value='PUT',name='_method')
        p
            button#btnSubmit(type='submit').
                Update
